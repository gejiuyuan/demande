{
	"compilerOptions": {
		"target": "es2015", //rollup目标编译es版本
		"module": "esnext",
		"lib": ["DOM", "esnext"],
		"outDir": "lib",
		"rootDir": "src",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"types/*": ["./types/*"]
		},
		// "declaration": true,
		// "declarationDir": "types",
		// "declarationMap": true,
		// "sourceMap": true,
		"downlevelIteration": true,
		// "isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "global.d.ts"],
	"exclude": ["__test__/**/*.ts"]
}
